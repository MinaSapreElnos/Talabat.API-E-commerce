@model RoleViewModel 
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Role </h1>
<br /> 
<br />

<form method="post" asp-action="Edit"> 

    <input asp-for="Id" hidden  class="form-control"/>

    <div class="form-group m-2">
        <label asp-for=" Name" class="form-control"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="input-group mt-2 justify-content-center">
        <button type="submit" class="btn btn-danger"> Save </button>
        <a asp-action="Index" class="btn btn-secondary m-2"> Go To Back</a>
    </div>

</form>

@using Microsoft.AspNetCore.Identity;

@model IEnumerable<IdentityRole>;
@{
    ViewData["Title"] = "Index";
}

<h1>ALL Roles</h1>
<br />
<br />
@*inject Partial view*@
<partial name="RoleForm" model="new RoleFormViewModel()"></partial>

@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(R =>R.Id)</th>
                <th>@Html.DisplayNameFor(R =>R.Name)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td> @item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"> Delete</a>

                    </td> 
                </tr>
            }
        </tbody>
    </table>
}
else{
    <div class="mt-3 p-3 alert-danger">
        <h2>There is No Roles</h2>
    </div>
}


@model IEnumerable<UserViewModel> ;
@{
    ViewData["Title"] = "Index";
}

<h1>All User</h1>

@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                
                <th>@Html.DisplayNameFor(U => U.UserName)</th>
                <th>@Html.DisplayNameFor(U => U.DisplayName)</th>
                <th>@Html.DisplayNameFor(U => U.Email)</th>
                <th>@Html.DisplayNameFor(U => U.PhoneNumber)</th>
                <th>Role</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    
                    <td>@item.UserName</td>
                    <td>@item.DisplayName</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td>@string.Join("," ,item.Roles.ToList()) </td>
                    <td>
                        <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 p-3 alert-danger">
        <h2>There is No Users</h2>
    </div>
}


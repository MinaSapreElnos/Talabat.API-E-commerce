@model UserRoleViewModel ;
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @Model.UserName</h1>
<div class="container">
    <form method="post" asp-action="Edit">
        <input asp-for="UserId" class=" form-control" hidden />
        <div>
            <label asp-for="UserName"  class="col-form-label"></label>
            <input asp-for="UserName" class="form-control" disabled />
        </div>

        <h3>Mange User Roles</h3>
        <br />

        @for(var i = 0; i< Model.Roles.Count; i++)
        {
            <div>
                <input asp-for="@Model.Roles[i].Name" hidden>
                <input asp-for="@Model.Roles[i].isSelected" class="form-check-input">
                <label asp-for="@Model.Roles[i]" class="form-check-input">@Model.Roles[i].Name</label>
            </div>
        }
        <br />
        <input type="submit" value="save" class="btn alert-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back To List</a>
    </form>
</div> 
